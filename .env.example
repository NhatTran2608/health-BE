# Port server chạy
PORT=5000

# MongoDB Connection String
# Thay đổi theo cấu hình MongoDB của bạn
MONGODB_URI=mongodb://localhost:27017/health_management

# JWT Secret Key - Dùng để mã hóa token
# Nên đặt chuỗi phức tạp trong production
JWT_SECRET=your_super_secret_jwt_key_here_123

# JWT Expire Time - Thời gian hết hạn token
JWT_EXPIRE=7d

# Node Environment
NODE_ENV=development
